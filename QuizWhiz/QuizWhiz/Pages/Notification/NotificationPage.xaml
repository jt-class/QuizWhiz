<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizWhiz.Pages.Notification.NotificationPage"
             Title="NotificationPage"
             Background="White">

    <VerticalStackLayout
        Margin="0,25,0,0">

        <Grid>
            <ImageButton
            Source="back.png"
            Clicked="OnBackButtonClicked"
            WidthRequest="55"
            HeightRequest="35"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10,0,0,0"/>

            <Label 
            Text="NOTIFICATIONS"
            TextColor="Black"
            FontSize="25"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        </Grid>

        <!-- Mga notification -->
        <CollectionView>
            
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>